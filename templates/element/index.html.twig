{% extends 'base.html.twig' %}

{% block title %}Element index{% endblock %}

{% block body %}
    <h1>Element index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Side</th>
                <th>Ordre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>{{ element.id }}</td>
                <td>{{ element.content }}</td>
                <td>{{ element.side ? 'Yes' : 'No' }}</td>
                <td>{{ element.ordre }}</td>
                <td>
                    <a href="{{ path('app_element_show', {'id': element.id}) }}">show</a>
                    <a href="{{ path('app_element_edit', {'id': element.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_element_new') }}">Create new</a>
{% endblock %}
