{% extends 'base.html.twig' %}

{% block title %}Element{% endblock %}

{% block body %}
    <h1>Element</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ element.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ element.content }}</td>
            </tr>
            <tr>
                <th>Side</th>
                <td>{{ element.side ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ element.ordre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_element_index') }}">back to list</a>

    <a href="{{ path('app_element_edit', {'id': element.id}) }}">edit</a>

    {{ include('element/_delete_form.html.twig') }}
{% endblock %}
