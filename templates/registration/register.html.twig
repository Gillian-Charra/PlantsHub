{% extends 'base.html.twig' %}
	{% block head %}

        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('css/helpers.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">

        <link rel="stylesheet" type="text/css" href="{{ asset('css/form.css') }}">
    {% endblock %}
		{% block ul %}
		<ul>
            <li class="user-options-button li-clean"><a class="a-clean" href="/profile-settings"><img class="profile-image" src="/images/avatar/{% if app.user %}{{ app.user.profilepicture }}{% else %}imageParDefaut.png{% endif %}"/></a></li>
            <li class="options-menu-lateral li-clean"><a class="liens-menu-lateral a-clean" href="/accueil">Accueil</a></li>
			<li class="options-menu-lateral li-clean"><a class="liens-menu-lateral a-clean" href="/login">Se connecter</a></li>
		</ul>
       {% endblock %}
{% block title %}Register{% endblock %}

{% block body %}
 <div class="container">
   <div id="signup">
      <div class="signup-screen">
         <div class="space-bot text-center">
            <h1>Sign up</h1>
           <div class="divider"></div>
        </div>
    {{ form_start(registrationForm) }}


        <div class="input-field col s6">
                {{ form_row(registrationForm.name) }}
        </div>
        <div class="input-field col s6">
                {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        </div>
        <div class="input-field col s6">
                {{ form_row(registrationForm.profile_picture, {
            label: 'Photo de profil'
        }) }}
        </div>
        <div class="input-field col s6" style="text-align:center;">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>
        <button type="submit" class="btn">Register</button>
                      </div>
    {{ form_end(registrationForm) }}
               </div>
        </div>
    </div>
{% endblock %}
